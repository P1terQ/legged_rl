<launch>
    <arg name="robot_type" default="$(env ROBOT_TYPE)" doc="Robot type: [a1, aliengo, lite3]"/>
    <rosparam file="$(find legged_gazebo)/config/default.yaml" command="load"/>

    <param name="legged_robot_description" command="cat $(find legged_rl_description)/urdf/$(arg robot_type).urdf"/>

    <node name="generate_urdf" pkg="legged_rl_common" type="generate_urdf.sh" output="screen"
          args="$(find legged_rl_description)/urdf/$(arg robot_type).urdf "/>

    <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" clear_params="true"
          args="-z 0.5 -param legged_robot_description -urdf -model $(arg robot_type)" output="screen"/>

</launch>

